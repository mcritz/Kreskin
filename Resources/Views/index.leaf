<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
	<title>Kreskin</title>
	<link rel="stylesheet" type="text/css" href="css/bootstrap.min.css">
	<script src="https://cdnjs.cloudflare.com/ajax/libs/axios/0.17.1/axios.min.js"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/vue/2.5.13/vue.min.js"></script>
</head>
<body>

<section id="notifications" style="position: fixed; width: 100vw; -webkit-backdrop-filter: blur(10px) brightness(95%); background: rgba(255,255,255, 0.8);">
	<notification-comp 
		v-for="(notice, index) in notifications"
		v-bind:notice="notice"
		v-bind:key="notice.message"
		v-on:dismiss="notifications.splice(index, 1)"
    v-bind:class="{ 
      'alert-danger': notice.type == 'error',
      'alert-success': notice.type == 'success'
     }"
		>
	</notification-comp>
</section>

<div id="greeting" class="container">
	<h1>KRZKN</h1>
	<h2>{{greeting}}</h2>
</div>

<section id="account" class="container" v-model="user">
    <div class="row" v-if="loginIsActive == false">
        <button class="btn" v-on:click="logout()">Sign Out</button>
    </div>
    <div v-if="loginIsActive">
		<h3>Sign Up</h3>
		<div class="row">
			<div class="form-group">
				<label for="name">Your name</label>
				<input id="name" 
				type="text" 
				name="name" 
				class="form-control" 
				placeholder="Your name"
				v-model="user.name"
				required
				>
			</div>
		</div>
		<div class="row">
			<div class="form-group">
				<label for="email">Email</label>
				<input id="email" 
				type="email" 
				name="email" 
				class="form-control" 
				placeholder="email"
				v-model="user.email"
				required
				>
			</div>
		</div>
		<div class="row">
			<div class="form-group">
				<label for="password">Password</label>
				<input id="password" 
				type="password" 
				class="form-control" 
				name="password"
				v-model="user.password"
				required
				>
			</div>
		</div>
		<div class="row">
			<div class="form-group">
				<input id="signup-btn"
				type="submit" 
				class="btn btn-primary" 
				value="Sign Up"
				v-on:click="signup()"
				>
			</div>
		</div>
	</div>
</section>

<section id="newprediction" v-model="prediction" class="container" v-if="session.isActive == true">
	<h3>My Prediction</h3>
	<div class="row">
		<div class="form-group">
			<label for="predix-title">Topic</label>
			<input type="text" 
			id="predix-title"
			class="form-control"
			v-model="prediction.title"
			/>
		</div>
	</div>
	<div class="row">
		<div class="form-group">
			<label for="predix-premise">I predictâ€¦</label>
			<input 
			type="text" 
			class="form-control" 
			v-model="prediction.premise"
			/>
		</div>
	</div>
	<div class="row">
		<div class="form-group">
			<label for="predix-description">Details</label>
			<textarea
			class="form-control" 
			v-model="prediction.description"
			></textarea>
		</div>
	</div>
	<div class="row">
		<input type="submit" class="btn btn-primary" value="Submit Presiction" v-on:click="submitPrediction()" />
	</div>
</section>

<section id="predictions" class="container">
	<prediction-comp 
		v-for="prediction in predictions"
		v-bind:prediction="prediction"
        v-bind:user="user"
		v-bind:key="prediction.id"
		v-on:reveal="update(prediction)"
		>
	</prediction-comp>
</section>

<script src="js/app.js"></script>
</body>
</html>
