<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
	<title>Kreskin #(name)</title>
	<link rel="stylesheet" type="text/css" href="css/bootstrap.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/axios/0.17.1/axios.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/vue/2.5.13/vue.min.js"></script>
</head>
<body>
<div class="container">
	<h1>KRZKN</h1>
    <h2>Hello, #(name)</h2>
</div>

<div id="predictions" class="container">
    <div v-for="prediction in predictions" v-on:click="ping">
        <h4>{{ prediction.title }}</h4>
        <p>{{ prediction.premise }}</p>
        <p>{{ prediction.description }}</p>
    </div>
</div>

<script>
var PredictionsView = new Vue({
    el: '\#predictions',
    data: {
        predictions: []
    },
    mounted: function () {
        var self = this;
        self.fetchDataAx();
    },
    methods: {
        fetchDataAx: function() {
            axios.get('/predictions').then(response => {
                this.predictions = response.data;
            });
        },
        fetchDataJq: function() {
            $.ajax({
                url: '/predictions',
                method: 'GET',
                success: function (data) {
                    self.predictions = data;
                },
                error: function (error) {
                    console.log(error);
                }
            });
        },
        ping: function() {
            alert('hi there1');
        },
        reverseMessage: function () {
            this.message = this.message.split('').reverse().join('')
        }
    }
});
</script>
</body>
</html>
